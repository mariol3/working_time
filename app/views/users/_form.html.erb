<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> hanno impedito la creazione dell'utente:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label 'Conferma password' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label 'Conferma email' %><br />
    <%= f.text_field :email_confirmation %>
  </div>
  <div class="field">
    <%= f.label 'Nome' %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label 'Cognome' %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label 'Ore giornaliere (0(punto)5 indica la mezzora)' %><br />
    <%= f.text_field :daily_hours %>
  </div>
  <div class="actions">
    <%= f.submit 'Crea' %>
  </div>
<% end %>
